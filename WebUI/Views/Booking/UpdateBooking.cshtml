@model UpdateBookingDto
@{
    ViewData["Title"] = "UpdateBooking";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Rezervasiya əməliyyatları</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Rezervasiya Yeniləmə Səhifəsi</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="BookingId" />
                            <div class="form-group">
                                <label for="Fullname">Ad Soyad</label>
                                <input type="text" class="form-control" asp-for="Name" id="name">
                            </div>
                            <div class="form-group">
                                <label for="phone">Telefon</label>
                                <input type="text" class="form-control" asp-for="Phone" id="phone">
                            </div>
                            <div class="form-group">
                                <label for="mail">Epoct</label>
                                <input type="email" class="form-control" asp-for="Mail" id="mail">
                            </div>
                            <div class="form-group">
                                <label for="PersCount">Rezerv sayı</label>
                                <input type="text" class="form-control" asp-for="PersonCount" id="personcount">
                            </div>
                            <div class="form-group">
                                <label for="Date">Rezerv tarixi</label>
                                <input type="date" class="form-control" asp-for="Date" id="date">
                            </div>  

                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Təsdiq Et</button>
                            <a href="@Url.Action("Index", "Booking")" class="btn btn-secondary">İmtina Et</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>