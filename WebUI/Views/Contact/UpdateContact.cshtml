@model UpdateContactDto
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kontakt əməliyyatları</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Kontakt Yeniləmə Səhifəsi</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="ContactId" />
                            <div class="form-group">
                                <label for="location">Məkan</label>
                                <input type="text" class="form-control" asp-for="Location" id="location">
                            </div>
                            <div class="form-group">
                                <label for="phone">Telefon</label>
                                <input type="phone" class="form-control" asp-for="Phone" id="phone">
                            </div>
                            <div class="form-group">
                                <label for="mail">Epoçt</label>
                                <input type="email" class="form-control" asp-for="Mail" id="email">
                            </div>
                            <div class="form-group">
                                <label for="desc">Açıqlama</label>
                                <input type="text" class="form-control" asp-for="FooterDescription" id="Fdesc">
                            </div>

                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Təsdiq Et</button>
                            <a href="@Url.Action("Index", "Contact")" class="btn btn-secondary">İmtina Et</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>